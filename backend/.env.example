# Mind-Task Fusion - Environment Variables Template
# Copy this file and rename to .env.php for actual configuration

# Database Configuration (from Hostinger cPanel)
DB_HOST=localhost
DB_NAME=your_database_name
DB_USER=your_database_username  
DB_PASS=your_database_password

# JWT Secret Key (change to a random string - use https://randomkeygen.com/)
JWT_SECRET=change-this-to-a-random-secure-string-min-32-chars

# Frontend URL (your domain after deployment)
FRONTEND_URL=https://yourdomain.com

# API URL (usually same domain with/backend/api)
API_URL=https://yourdomain.com/backend/api

# Environment
ENV=production
